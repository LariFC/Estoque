<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RelacionamentoHeranca</title>
@*     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/mycsstheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RelacionamentoHeranca.styles.css" asp-append-version="true" />
</head>
<body style="max-width:100vw;overflow:hidden;">
    <header>
        <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="ligth" style="position:fixed;left:0;right:0; background-color:transparent !important;">
            <div class="container-fluid">
                <div class="img" style="width: 18rem;">
                    <a href="http://localhost:5000">
                    <img src="/css/Logo.png" alt="logo">
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="http://localhost:5000" style="color: #000c;">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" style="color: #000c;">Produtos</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="http://localhost:5000/Perecivel" style="color: #FF9999;">Perecíveis</a>
                                <a class="dropdown-item" href="http://localhost:5000/NaoPerecivel" style="color: #FF9999;">Não Perecíveis</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
