        <div class="img">
            <img src="/css/Mesa de trabajo 1.png" alt="bolo" />
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - RelacionamentoHeranca - <a href="https://learn.microsoft.com/pt-br/dotnet/csharp/fundamentals/object-oriented/inheritance">Documentação</a>
        </div>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
