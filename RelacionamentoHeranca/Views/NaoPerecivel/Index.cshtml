@model IEnumerable<RelacionamentoHeranca.Models.NaoPerecivel>

@{
    ViewData["Title"] = "Não perecível";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <button type="button" class="btn btn-outline-danger" onclick="window.location.href='NaoPerecivel/Create'">
        Criar Novo
    </button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tamanho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tamanho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                <button type="button" class="btn btn-outline-primary" onclick="window.location.href='@Url.Action("Edit", new { id = item.ProdutoID })'">
                    Editar
                </button>

                <button type="button" class="btn btn-outline-primary" onclick="window.location.href='@Url.Action("Details", new { id = item.ProdutoID })'">
                    Detalhes
                </button>

                <button type="button" class="btn btn-outline-danger" onclick="window.location.href='@Url.Action("Delete", new { id = item.ProdutoID })'">
                    Deletar
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
